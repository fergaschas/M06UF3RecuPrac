<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="window" alignment="CENTER" prefHeight="323.0" prefWidth="315.0" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fgascon.m06uf3recuprac.views.MainView">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" text="REPOSITORIES" />
   <ListView fx:id="repositoryList" prefHeight="200.0" prefWidth="200.0" />
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
      <children>
         <Button onAction="#createNewRepository" text="CREATE">
            <HBox.margin>
               <Insets />
            </HBox.margin></Button>
          <Button onAction="#openRepository" text="OPEN">
            <HBox.margin>
               <Insets />
            </HBox.margin></Button>
         <Button onAction="#dropRepository" text="DROP">
            <HBox.margin>
               <Insets />
            </HBox.margin></Button>
      </children>
   </HBox>
</VBox>
